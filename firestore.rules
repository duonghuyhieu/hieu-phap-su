rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Shared saves collection - public read/write for authenticated users (including anonymous)
    match /shared_saves/{document=**} {
      // Allow read access to any authenticated user (including anonymous)
      allow read: if request.auth != null;
      
      // Allow write access to any authenticated user (including anonymous)
      // Optional: Add size validation to prevent abuse
      allow write: if request.auth != null 
                   && request.resource.size() < 2 * 1024 * 1024; // 2MB limit
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

